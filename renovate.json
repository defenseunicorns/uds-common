{
  "enabled": true,
  "forkProcessing": "enabled",
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>defenseunicorns/uds-common//config/renovate.json5",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "separateMajorMinor": false,
  "customManagers": [
    {
      "customType": "regex",
      "depNameTemplate": "defenseunicorns/uds-core",
      "managerFilePatterns": [
        "/tasks/README\\.md/"
      ],
      "matchStrings": [
        "- UDS Core: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "depNameTemplate": "defenseunicorns/uds-cli",
      "managerFilePatterns": [
        "/tasks/README\\.md/"
      ],
      "matchStrings": [
        "- UDS CLI: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "depNameTemplate": "k3d-io/k3d",
      "managerFilePatterns": [
        "/tasks/README\\.md/"
      ],
      "matchStrings": [
        "- K3D: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "depNameTemplate": "defenseunicorns/lula",
      "managerFilePatterns": [
        "/tasks/README\\.md/"
      ],
      "matchStrings": [
        "- Lula: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "groupName": "UDS Common Support Dependencies",
      "labels": [
        "support-deps"
      ],
      "commitMessageTopic": "support-deps",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "groupName": "UDS Common Foundation Dependencies",
      "labels": [
        "foundation-deps"
      ],
      "commitMessageTopic": "foundation-deps",
      "matchPackageNames": [
        "defenseunicorns/uds-core",
        "defenseunicorns/uds-cli"
      ]
    },
    {
      "groupName": "UDS Common Package Dependencies",
      "labels": [
        "package-deps"
      ],
      "commitMessageTopic": "package-deps",
      "matchPackageNames": [
        "/.*nginx.*/"
      ]
    }
  ]
}
