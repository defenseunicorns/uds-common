{
  "enabled": true,
  "forkProcessing": "enabled",
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>defenseunicorns/uds-common//config/renovate.json5",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "schedule": ["after 7am and before 9am every weekday"],
  "separateMajorMinor": false,
  "regexManagers":[
    {
      "depNameTemplate": "defenseunicorns/uds-core",
      "fileMatch": ["README\\.md"],
      "matchStrings": [
        "- UDS Core: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "depNameTemplate": "defenseunicorns/uds-cli",
      "fileMatch": ["README\\.md"],
      "matchStrings": [
        "- UDS CLI: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "depNameTemplate": "k3d-io/k3d",
      "fileMatch": ["README\\.md"],
      "matchStrings": [
        "- K3D: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "groupName": "UDS Common Support Dependencies",
      "labels": ["support-deps"],
      "commitMessageTopic": "support-deps",
      "packagePatterns": ["*"]
    },
    {
      "groupName": "UDS Common Package Dependencies",
      "labels": ["package-deps"],
      "commitMessageTopic": "package-deps",
      "matchPackagePatterns": [".*podinfo.*"]
    }
  ]
}
